#app
  .vue-notification
    margin-top 16px
    padding 12px 20px
    border none
    border-radius: 4px
    color main
    background #E8F0FF
    font-size: 16px
    line-height 1.4
    text-align: center

    +$mobile-only()
      margin 0

    &.success
      color c-primary
      background c-primary-bg
      font-weight: 600

    &.error
      color c-red
      background c-red-bg
